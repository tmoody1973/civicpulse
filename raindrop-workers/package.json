{
  "name": "hakivo-workers",
  "version": "1.0.0",
  "description": "Raindrop workers for HakiVo - Daily brief generation and personalized news",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "deploy": "raindrop build deploy",
    "create-migration": "npx ts-node ./scripts/create_migration.mts",
    "clean-seed": "find ./db -name '*seed*' -type f -delete",
    "seed:createSql": "npx ts-node ./scripts/seed-sql.mts",
    "render-db": "pnpm run clean-seed && pnpm run create-migration && pnpm run seed:createSql"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@aws-sdk/client-s3": "^3.927.0",
    "kysely": "^0.27.2",
    "kysely-d1": "^0.3.0",
    "raindrop": "latest"
  },
  "devDependencies": {
    "@liquidmetal-ai/in-memory-d1": "^1.0.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "better-sqlite3": "^11.9.1",
    "prisma": "^6.5.0",
    "prisma-kysely": "^1.8.0",
    "typescript": "^5.0.0",
    "zx": "^8.5.2"
  }
}
